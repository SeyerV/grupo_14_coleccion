<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

  <body>
    <%- include('partials/navbar') %>

      <main>

        <section class="container section mt-5">
          <div class="row">
            <div class="col-5">
              <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block" width="500px" height="200px" alt="..." src=<%=`${product.photo}` %>>
                  </div>
                  <div class="carousel-item">
                    <img class="d-block" width="500px" height="200px" alt="..." src=<%=`${product.photo}`%>>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                  data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                  data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
            <div class="col-6 ms-4">
              <div class="barra">
                <p>Nombre del Producto</p>
              </div>
              <div>
                <p>
                  <%= product.name %>
                </p>
              </div>
              <div class="barra">
                <p>Descripcion</p>
              </div>
              <div>
                <p>
                  <%= product.description %>
                </p>
              </div>
              <div class="barra">
                <p>Precio</p>
              </div>
              <div>
                <p>
                  <%= product.price %>
                </p>
              </div>
              <div class="d-flex justify-content-around">
                <form class="d-inline-block" action="">
                  <button class="btn btn-outline-primary">
                    Comprar
                  </button>
                </form>
                <a class="d-inline-block btn btn-outline-secondary" href="/products/edit/<%=product.id %>">
                  Editar
                </a>
                <form class="d-inline-block" action="/products/delete/<%=product.id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
              </div>
            </div>
          </div>
        </section>
      </main>

      <%- include('partials/footer') %>

  </body>

</html>